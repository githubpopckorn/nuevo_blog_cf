<article>
    <div class="text-right">
        <%= time_ago_in_words(comment.created_at) %> -
        <%= link_to "Borrar", [@article,comment], class: "btn btn-danger btn-xs" %>
    </div>
    <div class="row">
        <div class="col-xs-1 col-md-1">
            <div class="box">
                <%= image_tag(comment.user.avatar) %>
            </div>
        </div>
        <div class="col-xs-11 col-md-8">
            <div class="box">
                <%= comment.body %>
            </div>
        </div>
    </div>
    

</article>